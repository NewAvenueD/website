{% extends 'partials/base.html.twig' %}
{% set faqs = page.header.faqs %}
{% block content %}
<section class="hero">
  <div class="col hero-image" style="background-image: url({{ pages.find('/images/hero').media[page.header.hero].url }})"></div>
  <div class="contents">
    <div class="inner bottom">
      <h1 class="headline">{{ page.header.title }}</h1>
    </div>
  </div>
</section>
<div class="inner">
  {{ page.content }}
  <dl class="faqs"></ul>
    {% for faq in faqs %}
    <dt>
      {{ faq.q }}
    </dt>
    <dd>
      {{ faq.a }}
    </dd>
    {% endfor %}
  </dl>
</div>
{% endblock %}
