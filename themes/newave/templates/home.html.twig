{% extends 'partials/base.html.twig' %}
{# TODO move base out of partials dir #}
{% block content %}
<!-- home.html.twig -->
{% set rows = page.header.content.rows %}
{% set row = page.header.content.rows[0] %}
<!--  row 00 -->
<div class="{{row.class}}">
  <div class="hero-image" style="background-image: url({{ pages.find('/images/hero').media[row.background].url }})"></div>
  <div class="contents">
    <div class="inner bottom">
      <h1 class="headline"><span class="cormorant">{{row.heading[0]}}</span>{{row.heading[1]}}</h1>
    </div>
  </div>
</div>

<!--  row 01 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_delivered')} %}

<!--  row 02 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_elevator')} %}
<!--  row 03 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_how-it-works-header')} %}
<!--  row 04 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_apt-scheduling')} %}
<!--  row 05 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_mobile-facility')} %}
<!--  row 06 -->
{% include '/modular/module.html.twig' with {'page': page.find('/home/_notifications')} %}


<!--  row 07 -->
<div class="row right-two delivered">
  <div class="col">
    <div class="col-contain image-bg solo" style="background-image: url({{ pages.find('/images/feature').media['reflection.jpg'].url }})">
    </div>
  </div>
  <div class="col">
    <div class="col-contain header">
      <div class="inner">
        <h2>Dentistry, delivered to your workplace.</h2>
      </div>

    </div>
  </div>
</div>
<!--  row 08 -->
<div class="row right-two range override-right">
  <div class="col">
    <div class="col-contain icon solo">
      <img src="{{ pages.find('/images/icon').media['tooth_magnifier.svg'].url }}" alt="New Avenue Dentistry use as your primary dentist">
    </div>
  </div>
  <div class="col">
    <div class="col-contain text">
      <div class="copy-block">
        <h3>
          We offer a full range of services, enabling employees to use New Avenue as their primary dentist.
        </h3>
      </div>
    </div>
  </div>
</div>
<!--  row 06 -->
<div class="row left-one regular">
  <div class="col">
    <div class="col-contain icon solo">
      <img src="{{ pages.find('/images/icon').media['calendar.svg'].url }}" alt="New Avenue Dentistry makes regular site visits to your business">
    </div>
  </div>
  <div class="col">
    <div class="col-contain text">
      <div class="copy-block">
        <h3>
          New Avenue makes regular site visits based on the needs of your team.
        </h3>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="col-contain image-bg solo" style="background-image: url({{ pages.find('/images/feature').media['chair.jpg'].url }})">
    </div>
  </div>
</div>
<div class="row left-three contact">
  <div class="col">
    <div class="col-contain">
      <h2>Get in Touch</h2>
      <h3>Drop us a line to find out how easy it is to bring on-site dentistry to your workplace</h3>
      {% include '/modular/module.html.twig' with {'page': page.find('/home/_contact')} %}
    </div>
  </div>
</div>


{% endblock %}
