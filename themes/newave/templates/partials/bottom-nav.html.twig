<!-- bottom-nav -->
{% set progress = pages.children.visible %}
{% set prev = progress.nextSibling(page.path) %}
{% set next = progress.prevSibling(page.path) %}

<div id="bottom-nav">
  <div class="container">
    <div class="nav">
      {% if not progress.isFirst(page.path) %}
      <a class="previous" href="{{ prev.url }}">
        <span class="both">
          <i class="fa fa-chevron-left"></i>
          <span class="text nav-prev">
            {{ prev.menu == 'Why New Avenue' ? 'Why New Ave...' : prev.menu }}
          </span>
        </span>
      </a>
      {% endif %}
      {% if not progress.isLast(page.path) %}
      <a class="next" href="{{ next.url }}">
        <span class="both">
          <span class="text nav-next">
            {{ next.menu }}
          </span>
          <i class="fa fa-chevron-right"></i>
        </span>
      </a>
      {% endif %}
    </div>
    <div class="footer-content">
      <span class="address">3007 Skyway Circle North, Suite 100 | Irving, TX 75038 | 972.905.1359</span>
      <span class="privacy"><a href="/user/pages/images/privacy_policy.pdf">Privacy Policy</a></span>
    </div>
  </div>

</div>
