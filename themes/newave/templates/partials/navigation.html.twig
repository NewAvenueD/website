<nav class="navigation">
  <a href="#" class="menu-icon">
    <i class="fa fa-bars"></i>
  </a>
  <ul class="main-navigation">
    {% for page in pages.children.visible %}
    {% set is_active = (page.active or page.activeChild) ? 'active' : '' %}
    <li class="{{ is_active }}">
      <a href="{{ page.url }}">
        {{ page.menu }}
      </a>
    </li>
    {% endfor %}
  </ul>
</nav>
